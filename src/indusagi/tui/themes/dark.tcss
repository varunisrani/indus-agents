/*
 * Indus CLI - Dark Theme
 *
 * The default dark theme, inspired by VS Code Dark+ and OpenCode themes.
 */

/* Override base variables for dark theme */
$primary: #fab283;
$secondary: #a0a0a0;
$accent: #61afef;
$success: #98c379;
$warning: #e5c07b;
$error: #e06c75;
$info: #56b6c2;

$background: #0a0a0a;
$background-panel: #141414;
$background-element: #1a1a1a;
$background-hover: #252525;
$background-selected: #2a2a2a;

$text: #d4d4d4;
$text-muted: #808080;
$text-strong: #ffffff;

$border: #333333;
$border-active: #fab283;
$border-subtle: #222222;

/* Syntax highlighting for code */
$syntax-comment: #6a737d;
$syntax-keyword: #c678dd;
$syntax-string: #98c379;
$syntax-number: #d19a66;
$syntax-function: #61afef;
$syntax-type: #e5c07b;
$syntax-variable: #e06c75;

/* Dark theme specific overrides */

Screen {
    background: $background;
}

Header {
    background: $background-panel;
    color: $primary;
}

Header > .header--title {
    color: $text-strong;
}

Header > .header--sub-title {
    color: $text-muted;
}

/* Message styling for dark theme */
.message-user {
    background: #0d1520;
    border-left: tall $accent;
}

.message-assistant {
    background: #140d08;
    border-left: tall $primary;
}

.message-tool {
    background: #14120a;
    border-left: tall $warning;
}

/* Input focus glow effect */
Input:focus {
    border: tall $primary;
}

TextArea:focus {
    border: solid $primary;
}

/* Button styling */
Button.-primary {
    background: $primary;
    color: #000000;
}

Button.-primary:hover {
    background: #ffcaa0;
}

/* Command palette dark styling */
.command-palette {
    background: #121212;
    border: thick $primary;
}

.command-item.-selected {
    background: #1f1f1f;
    color: $primary;
}

/* Session list dark styling */
.session-item.-active {
    background: #1a1510;
}

/* Tool execution dark styling */
.tool-execution {
    background: #101010;
}

/* Sidebar dark styling */
.sidebar {
    background: #0e0e0e;
}
